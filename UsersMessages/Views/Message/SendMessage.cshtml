@model EntityLayer.Concrete.UsersMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}


    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Yeni Mesaj Gönder</h3>
            </div>
            <!-- /.card-header -->
        <form method="post" action="/Message/SendMessage">
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" placeholder="Alıcı:" asp-for="ReceiverMail" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Konu:" asp-for="Subject">
                </div>
                <div class="form-group">
                    <textarea id="compose-textarea" class="form-control"  asp-for="Content"   style="height: 300px"></textarea>
                    
                </div>
                <div class="form-group">
                    <div class="btn btn-default btn-file">
                        <i class="fas fa-paperclip"></i> Dosya Seç
                        <input type="file" name="attachment">
                    </div>
                    <p class="help-block">Max. 32MB</p>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-right">
                    <button type="submit" formaction="/Draft/DraftMessageSave" class="btn btn-default"><i class="fas fa-pencil-alt"></i>Taslaklara Kaydet</button>
                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                </div>
                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal</button>
            </div>
        </form>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>


